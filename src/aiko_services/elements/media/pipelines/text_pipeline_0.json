{
  "version": 0,
  "name":    "p_text_0",
  "runtime": "python",

  "#":     ["(TextReadFile TextTransform TextWriteFile)"],
  "graph": ["(TextReadFile TextTransform TextWriteFile TextOutput)"],

  "parameters": {
		"_create_stream_":       "1",  "#": "automatically create new Stream 1",
		"_destroy_stream_exit_": "1",  "#": "when Stream 1 destroyed, exit Pipeline"
	},

  "elements": [
    { "name":   "TextReadFile",
      "parameters": {
        "data_sources": "(file:data_in/in_{}.txt)",
        "data_batch_size": 1
      },
      "input":  [{ "name": "paths", "type": "[Path]" }],
      "output": [{ "name": "texts", "type": "[str]" }],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.text_io"}
      }
    },
    { "name":   "TextTransform",
      "#": " transform options are lowercase, none, titlecase and uppercase",
      "parameters": {"transform": "titlecase"},
      "input":  [{ "name": "texts", "type": "[str]" }],
      "output": [{ "name": "texts", "type": "[str]" }],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.text_io"}
      }
    },
    { "name":   "TextWriteFile",
      "parameters": {"data_targets": "(file:data_out/out_{:02d}.txt)"},
      "input":  [{ "name": "texts", "type": "[str]" }],
      "output": [],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.text_io"}
      }
    },
    { "name":   "TextOutput",
      "input":  [{ "name": "texts", "type": "[str]" }],
      "output": [{ "name": "texts", "type": "[str]" }],
      "deploy": {
        "local": {"module": "aiko_services.elements.media.text_io"}
      }
    }
  ]
}
